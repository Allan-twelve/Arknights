                android:id="@+id/tenNames3"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tenNames4"
                android:gravity="center"
                android:layout_marginStart="15sp"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

