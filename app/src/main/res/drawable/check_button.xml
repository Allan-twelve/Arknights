<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <stroke
                    android:color="#C0C0C0"
                    android:width="2dp"/>
            <solid
                    android:color="#F5F5F5"/>
            <padding
                    android:right="15dp"
                    android:left="15dp"
                    android:bottom="5dp"
                    android:top="5dp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape>
            <stroke
                    android:color="#C0C0C0"
                    android:width="2dp"/>
            <solid
                    android:color="#000000"/>
            <padding
                    android:right="15dp"
                    android:left="15dp"
                    android:bottom="5dp"
                    android:top="5dp"/>
        </shape>
    </item>

</selector>